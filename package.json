{
  "name": "contracts",
  "version": "1.0.0",
  "description": "",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "truffle compile",
    "deploy": "truffle deploy",
    "hardhat:deploy": "npx hardhat compile && npx hardhat startnode",
    "start:node": "cd ./local_node && docker-compose up -d && cd ..",
    "start:node-goerli": "cd ./goerli_node && docker-compose up -d && cd ..",
    "start:local": "npm run start:node && sleep 2 && npm run hardhat:deploy",
    "start:ropsten": "cd ./ropsten_node && docker-compose up -d && sleep 2 && node ./index.js && cd ..",
    "start:goerli": "cd ./goerli_node && docker-compose up -d && sleep 2 && node ./index.js && cd ..",
    "stop:local": "cd ./local_node && docker-compose down && cd ..",
    "stop:ropsten": "cd ./ropsten_node && docker-compose down && cd ..",
    "stop:goerli": "cd ./goerli_node && docker-compose down && cd .."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swipswap/contracts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/swipswap/contracts/issues"
  },
  "homepage": "https://github.com/swipswap/contracts#readme",
  "dependencies": {
    "@chainlink/contracts": "0.0.11",
    "@openzeppelin/contracts": "3.2.0",
    "@truffle/hdwallet-provider": "^1.1.1",
    "axios": "0.20.0",
    "hardhat": "2.0.3"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.0",
    "@nomiclabs/hardhat-waffle": "2.0.0",
    "chai": "4.2.0",
    "ethereum-waffle": "3.2.1",
    "ethers": "5.0.17"
  }
}
