{
  "name": "contracts",
  "version": "1.0.0",
  "description": "",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "hardhat": "./node_modules/.bin/hardhat",
    "compile": "npm run hardhat compile",
    "deploy:local": "npm run hardhat -- run scripts/local/deploy.js",
    "mount:local": "npm run hardhat -- run --network localhost scripts/local/mount.js",
    "start:local": "cd local_node && docker-compose up -d",
    "restart:local": "cd local_node && docker-compose up -d chainlink",
    "stop:local": "cd local_node && docker-compose down",
    "deploy:goerli": "npm run hardhat -- run --network goerli scripts/goerli.js",
    "conect:goerli": "npm run hardhat -- run --network goerli scripts/goerli/mount.js",
    "start:goerli": "cd goerli_node && docker-compose up -d",
    "stop:goerli": "cd goerli_node && docker-compose down",
    "deploy:ropsten": "npm run hardhat -- run scripts/ropsten/deploy.js",
    "connect:ropsten": "npm run hardhat -- run --network ropsten scripts/ropsten/mount.js",
    "start:ropsten": "cd ropsten_node && docker-compose up -d",
    "restart:ropsten": "cd ropsten_node && docker-compose up -d chainlink",
    "stop:ropsten": "cd ropsten_node && docker-compose down",
    "start:kovan": "cd kovan_node_node && docker-compose up -d",
    "deploy:kovan": "npm run hardhat -- run scripts/kovan/deploy.js",
    "mount:kovan": "npm run hardhat -- run scripts/kovan/mount.js",
    "stop:kovan": "cd kovan_node_node && docker-compose down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swipswap/contracts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/swipswap/contracts/issues"
  },
  "homepage": "https://github.com/swipswap/contracts#readme",
  "dependencies": {
    "@chainlink/contracts": "0.0.11",
    "@openzeppelin/contracts": "3.2.0",
    "@truffle/hdwallet-provider": "^1.1.1",
    "axios": "0.20.0",
    "hardhat": "2.0.3"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.0",
    "@nomiclabs/hardhat-waffle": "2.0.0",
    "chai": "4.2.0",
    "ethereum-waffle": "3.2.1",
    "ethers": "5.0.17"
  }
}
